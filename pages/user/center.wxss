
.info-box{
    text-align: center;
    padding: 30rpx 0 0;
}
.info-box .avatar{
    display: block;
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    background: #ccc;
    background-size: cover;
    background-position: center;
    margin: 0 auto 50rpx;
}
.info-box .nick{
    color: #35343D;
    font-size: 48rpx;
    text-align: center;
    margin: 0 auto 15rpx;
}
.info-box .mobile{
    color: #9B99A9;
    font-size: 22rpx;
    text-align: center;
    margin: 0 auto 15rpx;
}